<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="left|top"
    android:paddingTop="@dimen/popup_settings_padding_top"
    android:paddingLeft="@dimen/popup_settings_padding_left">


        <TextView
            android:id="@+id/pause_text"
            android:layout_width="200dp"
            android:layout_height="@dimen/popup_settings_sound_image_size"
            android:layout_marginLeft="8dp"
            android:gravity="left|center_vertical"
            android:shadowColor="#2eaed9"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="Do you want to exit?"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/popup_settings_sound_text_size" />

    <LinearLayout
        android:id="@+id/buttonokcancel"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">

    <Button
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/time_border"
        android:id="@+id/button_ok"
        android:text="OK"
        android:textSize="17sp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/time_border"
            android:id="@+id/button_cancel"
            android:text="Cancel"
            android:textSize="17sp"/>

        </LinearLayout>



</LinearLayout>